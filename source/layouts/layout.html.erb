<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="<%= current_page.data.description || "Personal web page" %>">
  <meta name="author" content="Arandi LÃ³pez">
  <title><%= current_page.data.title || "Arandi Lopez" %></title>
  <%= partial 'partials/favicons' %>
  <link rel="manifest" href="/manifest.json">
  <%= partial 'partials/og' %>
  <link rel="alternate" type="application/atom+xml" title="Articles" href="/rss.xml" />
  <%= stylesheet_link_tag "site" %>
</head>
<body id="page-top" class="font-sans text-black leading-tight">
  <div id="app" class="py-8 lg:py-16 px-6 md:px-16 lg:px-24">
    <%= partial 'partials/navbar' %>
    <div class="lg:pl-32 mt-12 print:mt-3">
      <div class="max-w-md print:max-w-lg">
        <%= yield %>
      </div>
    </div>
  </div>

  <script>
   if (!navigator.serviceWorker.controller) {
       navigator.serviceWorker.register("/sw.js").then(function(reg) {
           console.log("Service worker has been registered for scope: " + reg.scope);
       });
   }
  </script>
  <%= javascript_include_tag "site", defer: 'defer' %>
</body>
</html>
