<h3 class="text-xl font-bold">
  <%= link_to article.title, article.url, class: "text-black no-underline" %>
</h3>
<time class="text-sm uppercase text-gray-700"><%= article.date.strftime('%b %e %Y') %></time>

<div class="summary">
  <%= article.summary %>
</div>
<p class="mb-6">
  <%= link_to "Read more...", article.url, class: "text-gray-700 no-underline hover:text-gray-900 hover:underline" %>
</p>
