<article class="resume">
  <section class="resume-section print:mb-3" id="about-me">
    <div class="resume-item">
      <div class="resume-content">
        <p><%= t('author.description') %></p>
      </div>
    </div>
  </section>
  <section class="resume-section print:mb-3" id="experience">
    <h2 class="resume-section-title print:mb-2"><%= t(:experience) %></h2>
    <% data.es.exp.each_with_index do |experience, i| %>
    <div class="resume-item <%= (i == data.es.exp.size - 1) ? 'print:mb-0' : 'print:mb-2' %>">
      <div class="resume-content">
        <h3 class="mb-0"><%= experience.role %></h3>
        <div class="subheading">
          <%= link_to experience.company, experience.link, target: '_blank', class: 'font-semibold uppercase text-grey-darkest no-underline' %>
        </div>
        <div class="resume-date mb-2 print:mb-0">
          <%= experience.date %>
        </div>
        <p>
          <%= experience.description %>
        </p>
        <% if experience.skills&.any? %>
        <p class="resume-skill-list">
          [<%= experience.skills.to_sentence %>]
        </p>
        <% end %>
      </div>
    </div>
    <% end %>
  </section>

  <section class="resume-section print:mb-0" id="education">
    <h2 class="resume-section-title print:mb-2"><%= t(:education) %></h2>
    <% data.es.education.each do |education| %>
    <div class="resume-item print:mb-2">
      <div class="resume-content">
        <h3><%= education.college %></h3>
        <div class="subheading"><%= education.degree %></div>
        <div class="resume-date mb-2 print:mb-0">
          <span class="text-sm text-grey-darker"><%= education.dates %></span>
        </div>
        <p>
          <ul>
            <% education.relevant_achievements.each do |achievement| %>
            <li><%= achievement %></li>
            <% end %>
          </ul>
        </p>
      </div>
    </div>
    <% end %>
  </section>
</article>
