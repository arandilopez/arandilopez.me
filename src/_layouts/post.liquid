---
layout: default
---
<article class="max-w-xs sm:max-w-3xl mx-auto">
    <h1>{{ page.title }}</h1>
    <ul class="hidden sm:block list-none flex items-center space-x-2 text-sm mb-3">
        {% for tag in page.tags %}
            <li class="rounded px-2 py-1 bg-gray-300">{{ tag }}</li>
        {% endfor %}
    </ul>

    {{ content }}
</article>
