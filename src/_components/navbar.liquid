<div x-data="{open: false}">
    <nav class="relative navbar z-20 items-center justify-between" >
        <a href="/" class="no-underline avatar">
            <img src="https://www.gravatar.com/avatar/3d952ca670e67bf1fdcd515caae14629"
                 alt="Profile"
                 class="h-10 w-10 md:h-12 md:w-12 lg:h-20 lg:w-20 rounded-full" width="80" height="80" />
        </a>
        <div class="links flex flex-col">
            <a href="/"
               class="font-title font-bold text-gray-800 dark:text-gray-100 dark:hover:text-gray-300 hover:text-black no-underline hover:underline text-2xl md:text-4xl">
                {{ metadata.author.name }}
            </a>
            <div class="hidden sm:flex mt-3 uppercase text-xs space-x-5">
                {% render "nav_links" %}
            </div>
        </div>
        <button class="burguer sm:hidden p-2" @click="open = !open">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path x-show="!open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                <path x-show="open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </nav>
    <div x-show="open"
         x-transition:enter="transition duration-200 ease-out"
         x-transition:enter-start="scale-75"
         x-transition:leave="transition duration-100 ease-in"
         x-transition:leave-end="opacity-0 scale-90"
         class="sm:hidden z-10 bg-white dark:bg-gray-900 fixed inset-0 pt-24">
        <div class="flex flex-col space-y-5 text-center uppercase">
            {% render "nav_links" %}
        </div>
    </div>
</div>
